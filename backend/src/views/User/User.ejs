<h4 class="title text-center">USER</h4>

<div class="container addUser">
   <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCreateUser">
      <i class="fa-solid fa-user-plus"></i>
   </button>
   <!-- Modal 1: Tạo User -->
   <div class="modal fade" id="modalCreateUser" tabindex="-1" aria-labelledby="modalCreateUserLabel" aria-hidden="true">
      <div class="modal-dialog bodyShow">
         <div class="modal-content modelBody">
            <div class="modal-header">
               <h1 class="modal-title fs-5" id="modalCreateUserLabel">Create User</h1>
               <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
               <%- include("./createUser.ejs") %>
            </div>
         </div>
      </div>
   </div>
   <div class="modelUpdateuser"></div>
</div>

<section class="intro">
   <div class="bg-image h-100">
      <div class="mask d-flex align-items-center h-100">
         <div class="container">
            <div class="row justify-content-center">
               <div class="col-12">
                  <div class="card shadow-2-strong">
                     <div class="card-body">
                        <div class="table-responsive">
                           <table class="tableUser table table-borderless mb-0">
                              <thead class="headerTableUser">
                                 <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">Username</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Address</th>
                                    <th scope="col">Gender</th>
                                    <th scope="col">Role</th>
                                    <th scope="col">Action</th>
                                 </tr>
                              </thead>
                              <tbody class="bodyTableUser">
                                 <% dataTable.forEach((user, i)=> { %>
                                    <tr>
                                       <th>
                                          <%= i + 1 %>
                                       </th>
                                       <th>
                                          <%= user.name %>
                                       </th>
                                       <th>
                                          <%= user.email %>
                                       </th>
                                       <th>
                                          <%= user.phone %>
                                       </th>
                                       <th>
                                          <%= user.address %>
                                       </th>
                                       <th>
                                          <%= user.gender ? "Nam" : "Nữ" %>
                                       </th>
                                       <th>
                                          <%= user.role===1 ? "Admin" : "User" %>
                                       </th>
                                       <th class="d-flex align-items-center">
                                          <a href="#" class="edit-user-btn" data-id="<%= user.id %>">
                                             <i class="fa-solid fa-user-pen co-orange"></i>
                                          </a>
                                          <a href="#" class="delete-user-btn" data-id="<%= user.id %>">
                                             <i class="fa-solid fa-user-minus"></i>
                                          </a>
                                       </th>
                                    </tr>
                                    <% }); %>
                              </tbody>
                           </table>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</section>