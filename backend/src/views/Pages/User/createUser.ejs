<div class="createUser">
   <form class="formCreateUser" action="/api/user/create-user" method="post">
      <div class="row g-3">
         <div class="form-group col-md-4 mg-0">
            <label for="inputEmail4">Name</label>
            <input type="text" class="form-control" name="name">
         </div>
         <div class="form-group col-md-4 mg-0">
            <label for="inputPassword4">Email</label>
            <input type="email" class="form-control" name="email" placeholder="email">
         </div>
         <div class="form-group col-md-2 mg-0">
            <label for="inputPassword4">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Password">
         </div>
         <div class="form-group col-md-2  mg-0">
            <label>Gender</label>
            <select name="gender" class="form-control">
               <option selected value="true">Female</option>
               <option value="false">Male</option>
            </select>
         </div>
      </div>
      <div class="row g-3">
         <div class="form-group col-md-6">
            <label for="inputAddress">Phone</label>
            <input type="tel" class="form-control" name="phone" placeholder="0123456789">
         </div>
         <div class="form-group col-md-4">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" name="address" placeholder="1234 Main St">
         </div>
         <div class="form-group col-md-2">
            <label>Role</label>
            <select class="form-control" name="role">
               <option selected value="2">User</option>
               <option value="1">Owner</option>
               <option value="0">Admin</option>
            </select>
         </div>
      </div>
      <div class="d-flex justify-content-end">
         <button type="submit" class="btn btn-primary m-3">Sign in</button>
      </div>
   </form>
</div>