<div class="modal fade" id="updateUserModal" tabindex="-1" aria-labelledby="updateUserLabel" aria-hidden="true">
   <div class="modal-dialog bodyShowUpdate">
      <div class="modal-content">
         <div class="modal-header">
            <h1 class="modal-title fs-5" id="updateUserLabel">Update User</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
         </div>
         <div class="modal-body content-UpdateUser">
            <form class="formCreateUser" action="/api/user/edit-user/<%= User.id %>" method="post">
               <div class="row g-3">
                  <div class="form-group col-md-5 mg-0">
                     <label for="inputEmail4">Name</label>
                     <input type="text" class="form-control" name="name" value="<%= User.name %>">
                  </div>
                  <div class="form-group col-md-5 mg-0">
                     <label for="inputPassword4">Email</label>
                     <input type="email" disabled class="form-control" name="email" value="<%= User.email %>">
                  </div>
                  <input type="hidden" class="form-control" name="password" value="<%= User.password %>">
                  <div class="form-group col-md-2  mg-0">
                     <label>Gender</label>
                     <select name="gender" class="form-control">
                        <option value="true" <%=User.gender ? "selected" : "" %>>Female</option>
                        <option value="false" <%=!User.gender ? "selected" : "" %>>Male</option>
                     </select>
                  </div>
               </div>
               <div class="row g-3">
                  <div class="form-group col-md-6">
                     <label for="inputAddress">Phone</label>
                     <input type="tel" disabled class="form-control" name="phone" value="<%= User.phone %>">
                  </div>
                  <div class="form-group col-md-4">
                     <label for="inputAddress">Address</label>
                     <input type="text" class="form-control" name="address" value="<%= User.address %>">
                  </div>
                  <div class="form-group col-md-2">
                     <label>Role</label>
                     <select class="form-control" disabled name="role">
                        <option value="2" <%=User.role===2 ? "selected" : "" %>>User</option>
                        <option value="1" <%=User.role===1 ? "selected" : "" %>>Owner</option>
                        <option value="0" <%=User.role===0 ? "selected" : "" %>>Admin</option>
                     </select>
                  </div>
               </div>
               <div class="d-flex justify-content-end">
                  <button type="submit" class="btn btn-primary m-3">Sign in</button>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>